
<div class="container">
  <h2 class="recipes_head">My Recipes</h2>

  <div class="recipes_wrapper">
    <% @recipes.each do |recipe| %>
      <div class="recipe animated pulse" style='background-image: url("<%= recipe.src %>")'>

        <div class="title"><%= link_to recipe.title, recipe.url %></div>
      </div>
    <% end %>
  </div>

</div>
