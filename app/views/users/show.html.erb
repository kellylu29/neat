
<div class="container">
  <h2>My Recipes</h2>

  <div class="recipes_wrapper">
    <% @recipes.each do |recipe| %>
      <div class="recipe" style='background-image: url("<%= recipe.src %>")'>

        <p class="title"><%= link_to recipe.title, recipe.url %></p>
      </div>
    <% end %>
  </div>

</div>
